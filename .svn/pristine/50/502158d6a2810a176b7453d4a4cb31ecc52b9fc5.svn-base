<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%-- <c:forEach items="${team.accounts}" var="x"> --%>
<%-- ::::${x.empName} --%>
<%-- </c:forEach> --%>
<br />
${team }
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>팀 상세보기</title>
</head>
<body>
	<section class="section">
		<div class="card">
			<div class="card-header">
				<h5 class="card-title">팀 상세보기</h5>
			</div>
			<div class="card-body">
				 <span>팀번호: ${team.teamId }</span>
				 <span>팀명: ${team.teamName }</span>
				 <span>
				 <c:forEach items="${team.teamMembers}" var="member">
				    <c:if test="${member.tmHr eq '팀장'}">
				        <!-- 팀장이면 해당 팀장의 이름을 출력 -->
				        <c:forEach items="${team.accounts}" var="account">
<%-- 				            <c:if test="${account.tmId eq member.tmId}"> --%>
<%-- 				               팀장명: ${account.empName} --%>
<%-- 				            </c:if> --%>
				        </c:forEach>
				    </c:if>
				</c:forEach>
				</span>
				<table class="table table-striped">
					<tr>
						<th>팀원명</th>
					</tr>
					<tr>
						<td><!-- 팀원의 이름 모두 출력 (팀장 포함) -->
							<c:forEach items="${team.teamMembers}" var="member">
							    ${member.tmHr} -
							    <c:forEach items="${team.accounts}" var="account">
							        <c:if test="${account.tmId eq member.tmId}">
							            ${account.empName}
							        </c:if>
							    </c:forEach>
							    <br>
							</c:forEach>
						</td>
					</tr>
				</table>
				<a href="${pageContext.request.contextPath}/team/list" class="btn btn-primary">목록으로</a>
				<a href="${pageContext.request.contextPath}/team/update?teamId=${team.teamId}" class="btn btn-primary">수정</a>

			</div>
		</div>
	</section>
</body>
