/* /resources/css/messenger/empListStyle.css */
#empListWrapper {
	max-height: 400px;
	overflow-y: auto;
	background-color: #fff;
	padding: 10px;
	border: 1px solid #ccc;
}

/* 확실하게 스크롤 스타일 확인용 */
#empListWrapper::-webkit-scrollbar {
	width: 8px;
}

#empListWrapper::-webkit-scrollbar-thumb {
	background-color: #aaa;
	border-radius: 4px;
}

#chatRoomWrapper {
	max-height: 300px; /* 스크롤이 생길 정도로 제한 */
	overflow-y: auto;
	padding: 10px;
	border: 1px solid #ccc;
	background-color: #fff;
	border-radius: 5px;
}

/* 스크롤바 스타일 optional */
#chatRoomWrapper::-webkit-scrollbar {
	width: 8px;
}

#chatRoomWrapper::-webkit-scrollbar-thumb {
	background-color: #888;
	border-radius: 4px;
}