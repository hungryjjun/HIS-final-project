// ëª¨ë‹¬ ë‚´ë¶€ ë™ì  í…Œì´ë¸” ì´ˆê¸°í™” ë° ê²°ì¬ì ì¶”ê°€/ì‚­ì œ ê´€ë ¨ (jQuery ì´ë²¤íŠ¸ ìœ„ì„ ì˜ˆì‹œ)
$(document).on('click', '#plus1', function() {
  const $tableBody = $('#approverTable');
  if (!$tableBody.length) return;

  // í…Œì´ë¸” ë‚´ì—ì„œ ê°€ì¥ í° seq ì°¾ê¸°
  let maxSeq = 0;
  $tableBody.find('tr.approverRow').each(function() {
    const seqVal = parseInt($(this).find('.aprSeq').val(), 10) || 0;
    if (seqVal > maxSeq) {
      maxSeq = seqVal;
    }
  });

  // ìƒˆ ê²°ì¬ìì˜ ìˆœë²ˆì€ (maxSeq + 1)
  const nextSeq = maxSeq + 1;

  const $newRow = $(`
    <tr class="approverRow">
      <td><input type="text" class="form-control aprId" value="" /></td>
      <td><input type="text" class="form-control approverId" value="" placeholder="ìŠ¹ì¸ìID" /></td>
      <td><input type="number" class="form-control aprSeq" value="${nextSeq}" readonly /></td>
      <td><input type="text" class="form-control aprStatus" value="ëŒ€ê¸°" readonly /></td>
      <td><input type="text" class="form-control aprReason" value="" placeholder="ì‚¬ìœ " /></td>
      <td><input type="text" class="form-control approverName" value="" placeholder="ìŠ¹ì¸ìëª…" /></td>
      <td><button type="button" class="btn btn-danger remove-row">ì‚­ì œ</button></td>
    </tr>
  `);

  $tableBody.append($newRow);
});

$(document).on('click', '#minus1', function() {
  const tableBody = $('#approverTable');
  if (tableBody.find('tr').length > 0) {
    tableBody.find('tr').last().remove();
  }
});

$(document).on('click', '.remove-row', function() {
  $(this).closest('tr').remove();
});
