<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>근로계약서 등록</title>
</head>
<body>
	<h2>근로계약서 등록</h2>
	<form action="${pageContext.request.contextPath}/contract/register" method="post">
		<table>
			<tr>
				<th>직원 ID:</th>
				<td><input type="text" name="empId" required></td>
			</tr>
			<tr>
				<th>계약 유형:</th>
				<td><select name="contractType">
						<option value="정규직">정규직</option>
						<option value="계약직">계약직</option>
						<option value="인턴">인턴</option>
				</select></td>
			</tr>
			<tr>
				<th>시작일:</th>
				<td><input type="date" name="startDate" required></td>
			</tr>
			<tr>
				<th>종료일:</th>
				<td><input type="date" name="endDate"></td>
			</tr>
			<tr>
				<th>근무 형태:</th>
				<td><select name="workType">
						<option value="풀타임">풀타임</option>
						<option value="파트타임">파트타임</option>
				</select></td>
			</tr>
			<tr>
				<th>기본 급여:</th>
				<td><input type="number" name="baseSalary" required></td>
			</tr>
			<tr>
				<th>초과 근무 수당:</th>
				<td><input type="number" name="overtimePay"></td>
			</tr>
			<tr>
				<th>주간 근무 시간:</th>
				<td><input type="number" name="weeklyHours" required></td>
			</tr>
			<tr>
				<th>계약 상태:</th>
				<td><select name="contractStatus">
						<option value="유효">유효</option>
						<option value="일시 중지">일시 중지</option>
						<option value="종료">종료</option>
				</select></td>
			</tr>
		</table>
		<br> <input type="submit" value="등록"> <a
			href="${pageContext.request.contextPath}/contract/List">취소</a>
	</form>
</body>
</html>